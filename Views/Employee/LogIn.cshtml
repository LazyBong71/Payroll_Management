@model PayrollWebApp.Models.EmployeeEntity

@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card shadow mt-4 border-0 mx-5 col-8">
        <div class="card-header bg-primary bg-gradient ml-0">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">LOG IN</h2>
                </div>
            </div>
        </div>
        <div class="card-body px-4 pt-2 pb-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form id="account" method="post">
                            <h2 class="text-center">Use a local account to log in</h2>
                            <hr />
                            <p><b class="text-danger">@ViewBag.LoginStatus</b></p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating pb-2">
                                <input asp-for="Email" class="form-control mb-1" />
                                <label asp-for="Email" class="ms-2 text-muted"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating pb-2">
                                <input asp-for="Password" id="myInput" class="form-control my-1" />
                                <label asp-for="Password" class="ms-2 text-muted"></label>
                                <input type="checkbox" onclick="togglePassword()"> Show Password<br />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="my-2 w-100 btn btn-success btn-lg">Log in</button>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p>
                                    <a asp-page="">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-controller="Employee" asp-action="Create">Register as a new user</a>
                                </p>
                                <p>
                                    <a asp-page="">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col-md-12">
                    <section>
                        <p class="divider-text d-flex mb-0 pb-0">Or</p>
                        <h3 class="text-center">Use another service to log in</h3>
                        <hr />
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

